{
  "respectGitignore": true,
  "env": {
    "MAX_THINKING_TOKENS": "16000",
    "BASH_DEFAULT_TIMEOUT_MS": "30000",
    "BASH_MAX_TIMEOUT_MS": "300000",
    "BASH_MAX_OUTPUT_LENGTH": "50000",
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1"
  },
  "permissions": {
    "deny": [
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(./secrets/**)",
      "Read(./**/*.key)",
      "Read(./**/*.pem)",
      "Edit(./.env)",
      "Edit(./.env.*)",
      "Write(./.env)",
      "Write(./.env.*)",
      "Bash(ssh:*)"
    ],
    "defaultMode": "bypassPermissions"
  },
  "sandbox": {
    "enabled": false
  },
  "alwaysThinkingEnabled": true,
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "INPUT=$(cat) && SID=$(echo \"$INPUT\" | jq -r '.session_id // \"unknown\"') && MSG=$(echo \"$INPUT\" | jq -r '.prompt // \"\"' | head -c 200 | sed 's/\"/\\\\\"/g') && mkdir -p .claude/logs && echo '{\"timestamp\":\"'$(date -u +%Y-%m-%dT%H:%M:%S.000Z)'\",\"cwd\":\"'$PWD'\",\"tool\":\"UserPrompt\",\"command\":\"'\"$MSG\"'\",\"status\":\"success\"}' >> .claude/logs/$SID.jsonl"
          }
        ]
      }
    ]
  }
}
